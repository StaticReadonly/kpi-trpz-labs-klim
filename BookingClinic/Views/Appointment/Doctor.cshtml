@using BookingClinic.Application.Common
@using BookingClinic.Application.Data.Appointment
@model IEnumerable<DoctorAppointmentDto>
@{
    ViewData["Title"] = "Doctor appointments";
    var currentPage = (int)ViewData["Page"];
    var pages = (List<int>)ViewData["Pages"];
    var errors = (IEnumerable<ServiceError>)ViewData["Errors"];
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>
    <div class="accordion" id="appointmentsAccordion">
        @if (Model.Count() == 0)
        {
            <div class="alert alert-info text-center" role="alert">
                No appointments found.
            </div>
        }
        else
        {
            @foreach (var app in Model.Select((a, i) => new { a, i }))
            {
                var collapseId = $"collapse{app.i}";
                var headingId = $"heading{app.i}";

                <div class="accordion-item mb-3 shadow-sm rounded-3 border-0">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button collapsed d-flex align-items-center" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            <div class="d-flex align-items-center w-100">
                                <div class="me-3">
                                    @if (app.a.PatientProfilePicture == null)
                                    {
                                        <img src="~/profiles/default/defaultUser.png" class="rounded-circle" style="width: 70px; height: 70px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="~/profiles/users/@app.a.PatientProfilePicture" class="rounded-circle" style="width: 70px; height: 70px; object-fit: cover;" />
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">
                                        <a href="/patients/@app.a.PatientId" class="text-decoration-none text-dark fw-semibold">
                                            @app.a.PatientNameSurname
                                        </a>
                                    </h5>
                                    <div class="text-muted small">
                                        @app.a.DateTime.ToString("dd.MM.yyyy HH:mm")
                                    </div>
                                </div>
                                <div>
                                    @{
                                        string statusText;
                                        string statusClass;

                                        if (app.a.IsCanceled)
                                        {
                                            statusText = "Canceled";
                                            statusClass = "badge bg-danger";
                                        }
                                        else if (app.a.IsFinished)
                                        {
                                            statusText = "Finished";
                                            statusClass = "badge bg-success";
                                        }
                                        else
                                        {
                                            statusText = "Planned";
                                            statusClass = "badge bg-warning text-dark";
                                        }
                                    }
                                    <span class="@statusClass">@statusText</span>
                                </div>
                            </div>
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId" data-bs-parent="#appointmentsAccordion">
                        <div class="accordion-body">
                            @if (app.a.IsFinished)
                            {
                                <p class="mb-0">@app.a.Results</p>
                            }
                            else if (app.a.IsCanceled)
                            {
                                <p class="text-muted fst-italic mb-0">This appointment was canceled.</p>
                            }
                            else
                            {
                                <form method="post" action="/appointment/finish">
                                    <input type="hidden" name="Id" value="@app.a.Id" />
                                    <input type="hidden" name="PatientId" value="@app.a.PatientId" />

                                    <div class="mb-3">
                                        <label for="results-@app.i" class="form-label fw-semibold">Appointment Results</label>
                                        <textarea id="results-@app.i" name="Results" class="form-control" rows="3" placeholder="Enter the appointment summary..." required></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-success btn-sm">
                                        Finish Appointment
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            @foreach (var p in pages)
            {
                var href = $"/appointment?page={p}";
                <li class="page-item @(p == currentPage ? "active" : "")">
                    <a class="page-link" href="@href">@p</a>
                </li>
            }
        </ul>
    </nav>
</div>
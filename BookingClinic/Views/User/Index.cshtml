@using BookingClinic.Services
@using BookingClinic.Services.Data.User
@model UserPageDataUpdateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "User";
    var errors = ViewData["Errors"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    @if (Model.ProfilePicture == null)
                    {
                        <img src="~/profiles/default/defaultUser.png" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="User" />
                    }
                    else
                    {
                        <img src="~/profiles/users/@Model.ProfilePicture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="User" />
                    }
                    <form asp-action="ProfilePicture" asp-controller="User" enctype="multipart/form-data" class="mt-3">
                        <div class="mb-2">Change photo:</div>
                        <input type="file" name="image" accept="image/*" class="form-control mb-2" />
                        <button type="submit" class="btn btn-outline-primary btn-sm">Save</button>
                    </form>
                </div>
            </div>
            <form asp-controller="User" asp-action="Logout">
                <button type="submit" class="btn btn-danger w-100">Log out</button>
            </form>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4">User Profile</h4>
                    <div class="mb-3">
                        <strong>Name:</strong> @Model.Name
                    </div>
                    <div class="mb-3">
                        <strong>Surname:</strong> @Model.Surname
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong> @Model.Email
                    </div>
                    <div class="mb-3">
                        <strong>Phone:</strong> @Model.Phone
                    </div>
                    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#editUserModal">
                        Edit
                    </button>
                    @if (errors != null)
                    {
                        var err = (errors as IEnumerable<ServiceError>).First();
                        <div class="alert alert-danger" role="alert">
                            @err.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="User" asp-action="UpdateUser" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel">Edit data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password"/>
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
@using BookingClinic.Application.Data.Review
@model DoctorReviewsDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject BookingClinic.Application.Interfaces.Helpers.IUserContextHelper UserContextHelper
@{
    ViewData["Title"] = "Doctor Reviews";
    Guid.TryParse(ViewContext.RouteData.Values["id"]?.ToString(), out Guid doctorId);
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center border rounded p-3 mb-4 bg-light">
        <div class="d-flex align-items-center">
            <img src="@(Model.ProfilePicture == null ? Url.Content("~/profiles/default/defaultUser.png") : Url.Content("~/profiles/default/" + Model.ProfilePicture))"
                 class="rounded-circle me-3" style="width: 80px; height: 80px; object-fit: cover;" alt="Doctor avatar" />
            <div>
                <h4 class="mb-0">@Model.Name @Model.Surname</h4>
            </div>
        </div>
        <div class="text-end">
            <div class="fs-5"><strong>Rating:</strong> @Model.Rating.ToString("F1")</div>
            <div class="fs-6 text-secondary">Total: @Model.Reviews.Count()</div>
        </div>
    </div>
    <div class="row g-4">
        @foreach (var rev in Model.Reviews)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-2">
                            <img src="@(rev.ProfilePicture == null ? Url.Content("~/profiles/default/defaultUser.png") : Url.Content("~/profiles/default/" + rev.ProfilePicture))"
                                 class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="User avatar" />
                            <div>
                                <div class="fw-semibold">@rev.OwnerName</div>
                                <div class="text-warning small">★ @rev.Rating</div>
                            </div>
                        </div>
                        <div class="border-top pt-2 mt-2 text-break" style="min-height: 60px;">
                            @rev.Text
                        </div>

                        @if (UserContextHelper.IsAuthenticated && UserContextHelper.UserId.HasValue && rev.PatientId == UserContextHelper.UserId.Value)
                        {
                            <div class="mt-3 text-end">
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@rev.Id">Delete</button>
                            </div>

                            <div class="modal fade" id="deleteModal-@rev.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@rev.Id" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel-@rev.Id">Confirm</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete review?
                                        </div>
                                        <div class="modal-footer">
                                            <form method="post" asp-controller="Review" asp-action="DeleteReview" class="m-0">
                                                <input type="hidden" name="DoctorId" value="@doctorId" />
                                                <input type="hidden" name="ReviewId" value="@rev.Id" />
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
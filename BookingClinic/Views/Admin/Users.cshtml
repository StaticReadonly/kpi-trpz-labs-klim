@model IEnumerable<BookingClinic.Application.Data.Admin.UserAdminDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>
<p><a class="btn btn-primary" asp-controller="Admin" asp-action="Index">Back to manage</a></p>
<p><a class="btn btn-primary" asp-controller="Admin" asp-action="CreateUser">Create user</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Name</td>
                <td>@u.Surname</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-controller="Admin"
                       asp-action="EditUser"
                       asp-route-id="@u.Id">Edit</a>
                    <form method="post" asp-controller="Admin"
                          asp-action="DeleteUser"
                          asp-route-id="@u.Id" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete user?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
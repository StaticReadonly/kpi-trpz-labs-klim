@using BookingClinic.Application.Data.Admin
@model BookingClinic.Application.Data.Admin.UserAdminDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create user"; 
    var clinics = ViewData["Clinics"] as IEnumerable<ClinicAdminDto>;
    var specs = ViewData["Specialities"] as IEnumerable<SpecialityAdminDto>;
}

<h2>Create user</h2>

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger">@TempData["Errors"]</div>
}

<form method="post" asp-controller="Admin" asp-action="CreateUserPost">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Surname" class="form-label"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select">
            <option value="Patient" selected='@(Model.Role=="Patient")'>Patient</option>
            <option value="Doctor" selected='@(Model.Role=="Doctor")'>Doctor</option>
            <option value="Admin" selected='@(Model.Role=="Admin")'>Admin</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Clinic (for Doctor)</label>
        @if (clinics != null)
        {
            <select name="ClinicId" class="form-select">
                <option value="">No clinic</option>
                @foreach (var c in clinics)
                {
                    <option value="@c.Id" selected="@(Model.ClinicId == c.Id)">@c.Name</option>
                }
            </select>
        }
        else
        {
            <input name="ClinicId" value="@(Model.ClinicId?.ToString() ?? "")" class="form-control" placeholder="Clinic GUID" />
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Speciality (for Doctor)</label>
        @if (specs != null)
        {
            <select name="SpecialityId" class="form-select">
                <option value="">No speciality</option>
                @foreach (var s in specs)
                {
                    <option value="@s.Id" selected="@(Model.SpecialityId == s.Id)">@s.Name</option>
                }
            </select>
        }
        else
        {
            <input name="SpecialityId" value="@(Model.SpecialityId?.ToString() ?? "")" class="form-control" placeholder="Speciality GUID" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-controller="Admin" asp-action="Users">Cancel</a>
</form>